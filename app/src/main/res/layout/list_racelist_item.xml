<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:paddingTop="3dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingBottom="3dp"
    android:orientation="vertical" >
    <!-- Wrap -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <!-- Left -->
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:background="@color/colorPrimary"
            >
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_centerInParent="true"
	            android:gravity="center"
	            android:paddingTop="30dp"
	            android:paddingBottom="30dp"
	            android:paddingLeft="14dp"
	            android:paddingRight="14dp"
	            >
	            <TextView 
	                android:id="@+id/racelist_item_race_dt_yyyy"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="@dimen/text_size_small"
	                android:textColor="@color/white"
	                />
	            <TextView 
	                android:id="@+id/racelist_item_race_dt_mmdd"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="@dimen/text_size_medium"
	                android:textColor="@color/white"
	                />
	            <TextView 
	                android:id="@+id/racelist_item_race_dt_day"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="@dimen/text_size_small"
	                android:textColor="@color/white"
	                />
	        </LinearLayout>
	        <TextView 
	            android:id="@+id/racelist_item_iv_regi"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/text_size_micro"
	            android:textColor="@color/white"
	            android:layout_marginRight="4dp"
	            android:layout_marginEnd="4dp"
	            android:layout_alignParentBottom="true"
	            android:layout_centerHorizontal="true"
	            />
        </RelativeLayout>
        <!-- Right -->
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
		    <!-- Layout1 -->
	        <RelativeLayout 
	            android:id="@+id/racelist_item_layout"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            >
		        <LinearLayout 
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:orientation="vertical"
		            android:gravity="center_vertical"
		            android:layout_margin="10dp"
		            >
		            <!--
					<TextView
						android:id="@+id/racelist_item_race_nm"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="@dimen/text_size_medium"
						android:ellipsize="end"
						android:maxLines="1"
						/>
					<TextView
						android:id="@+id/racelist_item_race_detail"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="@dimen/text_size_small"
						android:ellipsize="end"
						android:maxLines="1"
						/>
					<TextView
						android:id="@+id/racelist_item_location"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="@dimen/text_size_small"
						android:ellipsize="end"
						android:maxLines="1"
						/>
			         -->
					<me.grantland.widget.AutofitTextView
						android:id="@+id/racelist_item_race_nm"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="2dp"
						android:layout_marginBottom="2dp"
						android:textSize="@dimen/text_size_large"
						android:gravity="center"
						android:maxLines="2"
						autofit:minTextSize="8sp"
						/>
					<me.grantland.widget.AutofitTextView
						android:id="@+id/racelist_item_race_detail"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="2dp"
						android:layout_marginBottom="2dp"
						android:textSize="@dimen/text_size_small"
						android:gravity="center"
						android:singleLine="true"
						autofit:minTextSize="8sp"
						/>
					<me.grantland.widget.AutofitTextView
						android:id="@+id/racelist_item_location"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="2dp"
						android:layout_marginBottom="2dp"
						android:textSize="@dimen/text_size_small"
						android:gravity="center"
						android:singleLine="true"
						autofit:minTextSize="8sp"
						/>
		        </LinearLayout>
		        
		        <TextView 
		            android:id="@+id/racelist_item_city"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@android:color/white"
	                android:textSize="@dimen/text_size_micro"
	                android:layout_margin="4dp"
	                android:layout_alignParentRight="true"
		            android:layout_alignParentEnd="true"
		            />
		        
		        <TextView 
		            android:id="@+id/racelist_item_dday"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="@dimen/text_size_micro"
		            android:textColor="@color/white"
		            android:layout_toLeftOf="@id/racelist_item_city"
		            android:layout_toStartOf="@id/racelist_item_city"
		            android:layout_alignTop="@id/racelist_item_city"
		            />
	        </RelativeLayout>
		    
		    <View 
		        android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="4dp"
				android:layout_marginRight="4dp"
				android:background="@color/gray"
		        />
		    
		    <!-- Layout2 -->
		    <LinearLayout
		        android:id="@+id/racelist_item_layout2" 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:baselineAligned="false"
		        >
		        <LinearLayout 
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:orientation="horizontal"
		            android:gravity="center"
		            >
			        <ImageView 
			            android:id="@+id/racelist_item_iv_like_race"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:src="@drawable/ic_action_heart"
			            android:contentDescription="@string/app_name"
			            />
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="@string/like"
			            android:layout_marginRight="4dp"
			            android:layout_marginEnd="4dp"
			            />
			        <TextView 
			            android:id="@+id/racelist_item_like_race_cnt"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            />
		        </LinearLayout>
		        <LinearLayout 
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:orientation="horizontal"
		            android:gravity="center"
		            >
			        <ImageView 
			            android:id="@+id/racelist_item_iv_like_comment"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:src="@drawable/ic_action_monolog"
			            android:contentDescription="@string/app_name"
			            />
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="@string/comment"
			            android:layout_marginRight="4dp"
			            android:layout_marginEnd="4dp"
			            />
			        <TextView 
			            android:id="@+id/racelist_item_comment_cnt"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            />
		        </LinearLayout>
		    </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>